@model IEnumerable<Book>
@{
    ViewData["Title"] = "Search Books";
}
<h1>Search Books</h1>
<!-- ฟอร์มค้นหา -->
<form asp-action="SearchBook" method="get">
    <input type="text" name="search" placeholder="Search by Title" value="@ViewData["SearchQuery"]" />
    <button type="submit">Search</button>
</form>
<div class="book-grid">
    @if (!Model.Any())
    {
        <p>No books found.</p>
    }
    else
    {
        @foreach (var book in Model)
        {
            <div class="book-item">
                <a asp-controller="Search" asp-action="Details" asp-route-id="@book.Id">
                    @if (!string.IsNullOrEmpty(book.ImagePath))
                    {
                        <img src="@book.ImagePath" alt="@book.Title" class="book-image" />
                    }
                    else
                    {
                        <div class="no-image">No Image</div>
                    }
                    <p class="book-title">@book.Title</p>
                </a>
            </div>
        }
    }
</div>
<!-- CSS สำหรับจัดรูปแบบ -->
<style>
    .book-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .book-item {
        text-align: center;
    }

        .book-item a {
            text-decoration: none;
            color: inherit;
        }

    .book-image {
        width: 100px;
        height: auto;
        margin-bottom: 10px;
        transition: transform 0.2s;
    }

        .book-image:hover {
            transform: scale(1.1);
        }

    .no-image {
        width: 100px;
        height: 150px;
        background-color: #ccc;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        color: #666;
        margin-bottom: 10px;
    }

    .book-title {
        font-size: 14px;
        font-weight: bold;
    }
</style>